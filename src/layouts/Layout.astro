---
// src/layouts/Layout.astro
import "../styles/global.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/caba.svg" />

		<title>{title}</title>
	</head>
	<body class="bg-base-200 h-screen"></body><slot />
</html>
