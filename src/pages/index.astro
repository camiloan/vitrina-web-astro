---
// src/pages/index.astro
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

// 1. Obtenemos todos los items de la colecci칩n "showcase"
const allShowcaseItems = await getCollection("showcase");
---

<Layout title="Mi Vitrina de Componentes">
	<main>
		<h1 class="title">Mi Vitrina de Componentes</h1>
		<p class="subtitle">Una colecci칩n de hallazgos de frontend.</p>

		<div class="grid">
			{
				allShowcaseItems.map((item) => (
					<a href={`/showcase/${item.slug}`} class="card">
						<h2>{item.data.title} &rarr;</h2>
						<p>{item.data.description}</p>
						<div class="tags">
							<span class="tech-tag">{item.data.tech}</span>
						</div>
					</a>
				))
			}
		</div>
	</main>
</Layout>

<style>
	/* Estilos b치sicos para la p치gina de inicio */
	main {
		padding: 2rem;
		max-width: 1200px;
		margin: auto;
	}
	.title {
		font-size: 3rem;
		text-align: center;
		margin-bottom: 0.5rem;
	}
	.subtitle {
		font-size: 1.2rem;
		text-align: center;
		color: #888;
		margin-bottom: 3rem;
	}
	.grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
		gap: 1.5rem;
	}
	.card {
		display: block;
		padding: 1.5rem;
		border: 1px solid #ddd;
		border-radius: 8px;
		text-decoration: none;
		color: inherit;
		transition: border-color 0.2s;
	}
	.card:hover {
		border-color: #26a0da;
	}
	.card h2 {
		margin-bottom: 0.5rem;
	}
	.tags {
		margin-top: 1rem;
	}
	.tech-tag {
		background-color: #f0f0f0;
		padding: 0.25rem 0.75rem;
		border-radius: 16px;
		font-size: 0.8rem;
	}
</style>
